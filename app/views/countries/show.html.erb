<%- model_class = Country -%>
<div class="page-header">
  <h2>País</h2>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @country.name %></dd>
  <dt><strong>Grupo:</strong></dt>
  <dd>AQUI VA EL GRUPO</dd>
</dl>

<div class="form-actions">
  <%= link_to 'Atrás',
              countries_path, :class => 'btn'  %>
  <%= link_to 'Editar',
              edit_country_path(@country), :class => 'btn' %>
  <%= link_to 'Eliminar',
              country_path(@country),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Está seguro?')) },
              :class => 'btn btn-danger' %>
</div>